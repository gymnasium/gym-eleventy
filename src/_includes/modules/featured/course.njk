{%- if module -%}
<section class="{{ module.wrapper_class }}-featured-courses">
  {%- if module.heading -%}
    <h2>{{ module.heading }}</h2>
  {%- endif -%}
  <ul>
    {%- for item in module.items -%}
      {%- set id = item | upper -%}
      <li>
        <div class="featured-item" id="featured-course-{{ item }}">
          <img
            src="{{ collections.catalog[id]['img'] }}"
            alt="Course artwork for {{ collections.catalog[id]['title'] }}"
          >

          <hgroup>
          {%- if collections.catalog[id]["topic"] -%}
            <p class="topic">{{ collections.catalog[id]["topic"] }}</p>
          {%- endif -%}

          {%- if collections.catalog[id]["title"] -%}
            <h3>{{ collections.catalog[id]["title"] }}</h3>
          {%- endif -%}
          </hgroup>

          {%- if collections.catalog[id]["description"] -%}
            <p>{{ collections.catalog[id]["description"] }}</p>
          {%- endif -%}

          {%- if collections.catalog[id]["instructor"] -%}
            <p>with {{ bios[collections.catalog[id]["instructor"]].name }}</p>
            <p>{{ bios[collections.catalog[id]["instructor"]].subtitle }}</p>
          {%- endif -%}

          {# TODO: pre-populate link to the course about MFE #}
          <div class="cta">
            <a class="btn" href="{{ id | course_endpoint('course_about') }}">Learn More</a>
          </div>
        </div>
      </li>
    {%- endfor -%}
  </ul>
  {%- if module.description -%}
    <p>{{ module.description | safe }}</p>
  {%- endif -%}

  {%- if module.cta -%}
    <a class="btn" href="{{ module.cta.href }}">{{ module.cta.label }}</a>
  {%- endif -%}
</section>

{%- else -%}
  <em>{ Featured Course Module Placeholder }</em>
  <p>Pass in the `module` variable to make this work</p>
{%- endif -%}
