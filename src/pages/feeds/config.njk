---
permalink: /feeds/config.json
eleventyExcludeFromCollections: true
---
{%- set footer -%}{%- include 'layouts/components/footer.njk' -%}{%- endset -%}
{%- set footer = footer | minify_html | stringify | replace("GYM_ROOT_URL", config.urls.base_url) -%}
{# Important: note the inclusion of double quotes when replacing '"FOOTER_HTML"' #}
{
  "meta": {{ config.meta | stringify | safe }},
  "urls": {{ config.urls | stringify | safe }},
  "header": {{ config.header | stringify | safe }},
  "logos": {{ config.logos | stringify | safe }},
  "msg": {{ config.msg | stringify | safe }},
  "html": {{ config.html | stringify | replace('"FOOTER_HTML"', footer) | safe }},
  "bios": {{ bios | stringify | safe }},
  "courses": {{ courses | stringify | safe }},
  "markets": {
  {%- for market in markets.items -%}
    "{{ market.id }}": {
      "id": "{{ market.id }}",
      "title": "{{ market.title }}",
      "city": "{{ market.city }}",
      "postalCode": "{{ market.postalCode }}",
      "stateProvince": "{{ market.stateProvince }}",
      "countryCode": "{{ market.countryCode }}",
      "countryName": "{{ market.countryName }}",
      "coords": "{{ market.coords }}"
    }{%- if not loop.last -%},{%- endif -%}
  {%- endfor -%}
  },
  "paths": {{ config.paths | stringify | safe }},
  "colors": {{ config.colors | stringify | safe }},
  "css": {{ config.css | stringify | safe }}
}
