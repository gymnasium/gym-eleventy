{% set url = [ '/', collection.slug, '/'] | join %}

<article class="course-card">
  <div class="main">
    <a href="{{ url }}">
      <div class="artwork">
        <img alt="Course image for {{ collection.title }}." src="/img/og/collections/design-systems-collection.png" decoding="async" fetchpriority="high" width="1200" height="628">
      </div>
    </a>
    <header>
      <hgroup>
        <p class="topic"><b>{{ collection.topic }}</b></p>
        <h2 class="title"><a href="{{ url }}">{{ collection.title }}</a></h2>
      </hgroup>
      <p class="description">{{ content_collections.description }}</p>
    </header>
    <div class="cta">
      <a class="btn" href="{{ url }}">Explore Collection</a>
    </div>
  </div>
</article>
