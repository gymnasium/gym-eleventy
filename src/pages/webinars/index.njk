---
layout: layouts/main.njk
permalink: /webinars/
meta:
  title: Webinars
  description: "Insightful conversations with trailblazers in the web community."
  sitemapPriority: 0.5
  sitemapChangeFreq: monthly
---

{%- if webinars -%}
<header class="intro-about bg-mono-400 full-bleed">
  <h1>Webinars</h1>
  <p>Insightful conversations with trailblazers in the web community.</p>
</header>

<div class="card-grid">
  <ul>
  {%- for webinar in webinars | sortDataByDate('event_date') | reverse -%}
    <li class="color-card card {{ webinar.color | slugify }}" id="{{ webinar.id | lower }}">
      {# <div class="" id="{{ webinar.meta.id | lower }}"> #}
        <div class="main">
          <header>
            <p class="topic caps"><b>{{ webinar.content_category }}</b></p>
            <h2 class="title">{{ webinar.title | replace( r/:.*/ , '') }}{% if ':' in webinar.title %}<span class="subhead"><span class="visually-hidden">:</span> {{ webinar.title | replace( r/^.*:/ , '') }}</span>{% endif %}</h2>
            <p class="guests"><b>{{ webinar.event_guests }}</b></p>
          </header>
        </div>
        <div class="cta">
          <a class="btn" href="/webinars/{{ webinar.slug }}">Watch Recording</a>
        </div>
      {# </div> #}
    </li>
  {%- endfor -%}
  </ul>
</div>
{%- else -%}
  <p>No webinars found!!</p>
{%- endif -%}
