{%- if hero -%}
  {# {{ hero | dump }} #}
  {%- if hero.img.url -%}
    {# TODO: do something if we have an anomalous URL that doesn't fit the pattern below #}
  {%- endif -%}
  {%- if not heroClass -%}
    {%- set heroClass = "hero" -%}
  {%- endif -%}
  <article class="{{ heroClass }}" id="{{ hero.slug }}">
    <div class="image">
      {%- macro picture() -%}
        <picture decoding="async" fetchpriority="high">
          <source srcset="/img/hero/articles/{{ hero.slug }}/{{ hero.slug }}-768w.jpg" width="768" height="714" media="(min-width: 1200px)">
          <img alt="{{ hero.img.description }}" src="/img/hero/articles/{{ hero.slug }}/{{ hero.slug }}-1280w.jpg" width="1280" height="720">
        </picture>
      {%- endmacro -%}
      {%- if hero.cta.href | is_external_link -%}
        {%- external_link hero.cta.href, picture() -%}
      {%- else -%}
        <a href="{{ hero.cta.href }}">{{ picture() }}</a>
      {%- endif -%}
    </div>
    <header>
      <hgroup>
        <p>{{ hero.subtitle }}</p>
        <h1>{{ hero.title }}</h1>
      </hgroup>
      <p>{{ hero.description }}</p>
      <div class="cta">
        {%- if hero.cta.href | is_external_link -%}
          {%- external_link hero.cta.href, hero.cta.label, 'btn' -%}
        {%- else -%}
          <a href="{{ hero.cta.href }}" class="btn">{{ hero.cta.label }}</a>
        {%- endif -%}
      </div>
    </header>
  </article>
{%- else -%}
  <em>{ Hero Module Placeholder }</em>
  <p>Pass in the hero variable to make this work</p>
{%- endif -%}
