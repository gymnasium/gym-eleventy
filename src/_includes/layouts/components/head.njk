{%- set metaDescription = config.meta.description -%}
{%- if meta.description -%}
  {%- set metaDescription = meta.description -%}
{%- endif -%}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ config.meta.title }}</title>
<meta name="description" content="{{ metaDescription }}"/>
<meta name="author" content="{{ config.meta.author }}"/>
<meta property="og:type" content="website">
<meta property="og:locale" content="en_US">
<meta property="og:site_name" content="{{ config.meta.author }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@AquentGymnasium">
<meta name="twitter:creator" content="@AquentGymnasium">
<meta name="twitter:url" property="og:url" content="https://thegymnasium.com">
<meta name="twitter:title" property="og:title" content="{{ config.meta.author }}">
<meta name="twitter:description" property="og:description" content="{{ metaDescription }}">
<meta name="twitter:image" property="og:image" content="https://maintenance.thegymnasium.com/img/og/gym-brand.png">
<meta name="twitter:image:alt" property="og:image:alt" content="{{ config.meta.author }}">

<meta name="generator" content="{{ eleventy.generator }}">
{%- if meta.canonicalUrl -%}
<link rel="canonical" href="{{ meta.canonicalUrl }}">
{% endif %}
{# TODO: add OG meta #}
<meta content="ie=edge" http-equiv=X-UA-Compatible>
<link href="/favicon.svg" rel="icon" type="image/svg+xml">

<link rel="stylesheet" href="{{ '/css/global.css' | cachebust }}" />
{# Allows piping in page-specific CSS files - probably not a "recommended" practice. However, we have implemented this to support the collections index page #}
{%- if meta.css -%}
<link rel="stylesheet" href="{{ meta.css | cachebust }}" />
{% endif %}

{% block head %}{% endblock %}
