---
layout: layouts/main.njk
permalink: /jobs/
meta:
  title: Jobs
  bodyClass: "jobs collection"
---
{%- set intro = pages['jobs'].intro -%}
{%- set articles = pages['jobs'].articles -%}

{%- if intro.header -%}
  {%- set header = intro.header -%}
  {%- include 'modules/components/header.njk' -%}
{%- endif -%}

<section class="featured">
  {%- if intro.cards -%}
    <ul class="list-unstyled">
    {%- for idx in range(0, intro.cards.length) -%}
      {%- set card = intro.cards[idx] -%}
      {%- set heading = card.heading -%}
      {%- set subheading = card.subheading -%}
      {%- set url = card.cta.href -%}
      {%- set label = card.cta.label -%}
      {%- set src = card.img.src -%}
      {%- if card.img.srcSet -%}
        {%- set srcSet = card.img.srcSet -%}
      {%- else -%}
        {%- set srcSet = src -%}
      {%- endif -%}
      <li>
        <article class="featured-card">
          <div>
            <p class="topic"><b>{{ heading }}</b></p>
            <figure class="artwork">
              <a href="{{ url }}">
                <img alt="{{ heading }}" srcset="{{ srcSet }}" src="{{ src }}" decoding="asyc" fetchpriority="important" width="" height="">
              </a>
            </figure>
            <header>
              <a href="{{ url }}">
                <h3>{{ subheading }}</h3>
              </a>
            </header>
          {%- if card.cta -%}
            <div class="cta">
              <a class="btn" href="{{ url }}">{{label }}</a>
            </div>
          {%- endif -%}
          </div>
        </article>
      </li>
    {%- endfor -%}
    </ul>
  {%- endif -%}
  </section>

{# Here we're omitting some object keys to be able to loop through the content fields #}
{%- set content = pages['jobs'] | omit(['intro']) -%}

{%- if content -%}
  {%- for key, section in content -%}
    <section id="{{ key }}" class="{{ key }}">
      {# Load modules! #}
      {# Let's rename sections to modules, so we can keep track of what we're dealing with #}
      {%- set module = section -%}
      {%- include 'modules/' + section.module + '.njk' -%}
      {%- back_to_top -%}
    </section>
  {%- endfor -%}
{%- endif -%}
